{
  "name": "@mihailfox/proxmox-openapi",
  "version": "0.3.0",
  "description": "CLI and library for generating Proxmox OpenAPI artifacts.",
  "type": "module",
  "private": false,
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mihailfox/proxmox-openapi.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "require": "./dist/cli.cjs"
    }
  },
  "bin": {
    "proxmox-openapi": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "data",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "lint": "biome lint src",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "commander": "^12.1.0",
    "openapi-types": "^12.1.3",
    "playwright": "^1.55.1",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "provenance": true
  }
}
