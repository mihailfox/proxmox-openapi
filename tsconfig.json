{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@mihailfox/proxmox-openapi": ["packages/proxmox-openapi/src/index.ts"],
      "@mihailfox/proxmox-openapi/*": ["packages/proxmox-openapi/src/*"],
      "react-dom/client": ["types/react-dom-client.d.ts"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "packages/proxmox-openapi/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "app/dist",
    "var",
    "var/**",
    "docs/openapi",
    "docs/openapi/**",
    ".devcontainer",
    ".devcontainer/**"
  ]
}
