{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["vitest/globals"],
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "../../var/types/openapi-generator",
    "tsBuildInfoFile": "../../node_modules/.tmp/tsconfig.tools-openapi-generator.tsbuildinfo",
    "rootDir": ".",
