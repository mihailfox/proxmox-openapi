{
  "id": "cli-tools",
  "name": "CLI tools",
  "version": "1.0.0",
  "description": "Installs common CLI tooling (ripgrep, fd, bat, lsd, git-delta, helix, lynx, jq, yq, gojq, fzf).",
  "options": {
    "fzf": {
      "type": "boolean",
      "default": true,
      "description": "Install fzf fuzzy finder."
    },
    "fzfMethod": {
      "type": "string",
      "enum": ["apt", "gh-release"],
      "default": "gh-release",
      "description": "Select how fzf should be installed (apt package or GitHub release)."
    },
    "ripgrep": {
      "type": "boolean",
      "default": true,
      "description": "Install ripgrep."
    },
    "fd": {
      "type": "boolean",
      "default": true,
      "description": "Install fd (a simple, fast alternative to find)."
    },
    "bat": {
      "type": "boolean",
      "default": true,
      "description": "Install bat (a cat clone with wings)."
    },
    "lsd": {
      "type": "boolean",
      "default": true,
      "description": "Install lsd (an ls alternative)."
    },
    "delta": {
      "type": "boolean",
      "default": true,
      "description": "Install git-delta."
    },
    "helix": {
      "type": "boolean",
      "default": true,
      "description": "Install the Helix editor."
    },
    "jq": {
      "type": "boolean",
      "default": true,
      "description": "Install jq via apt."
    },
    "yq": {
      "type": "boolean",
      "default": true,
      "description": "Install yq from the GitHub release."
    },
    "gojq": {
      "type": "boolean",
      "default": true,
      "description": "Install gojq from the GitHub release."
    },
    "lynx": {
      "type": "boolean",
      "default": true,
      "description": "Install lynx via apt."
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils:2"
  ]
}
