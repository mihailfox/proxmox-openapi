{
  "name": "proxmox-openapi",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "workspaces": [
    ".github/actions/proxmox-openapi-artifacts",
    "packages/proxmox-openapi"
  ],
  "description": "Tooling to scrape the Proxmox API viewer and generate OpenAPI specifications.",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "scarfSettings": {
    "enabled": false
  },
  "scripts": {
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check . && npm run action:verify",
    "typecheck": "tsc --build tsconfig.build.json",
    "scraper:scrape": "proxmox-openapi scrape",
    "normalizer:generate": "proxmox-openapi normalize",
    "openapi:generate": "proxmox-openapi generate",
    "openapi:validate": "tsx packages/proxmox-openapi/src/internal/openapi-generator/validate.ts",
    "automation:pipeline": "proxmox-openapi pipeline",
    "automation:summary": "tsx packages/proxmox-openapi/scripts/automation/format-summary.ts",
    "openapi:prepare": "node scripts/openapi-sync.mjs",
    "openapi:release:prepare": "node scripts/prepare-openapi-release.mjs",
    "ui:build": "vite build",
    "build": "npm run typecheck && npm run openapi:prepare && npm run ui:build",
    "ui:dev": "npm run openapi:prepare && vite",
    "ui:build:dev": "vite build --mode development",
    "ui:preview": "npm run ui:build && vite preview",
    "ui:test:coverage": "vitest run --coverage --passWithNoTests",
    "ui:test": "vitest run --passWithNoTests",
    "ui:test:e2e": "playwright test -c playwright.ui.config.ts",
    "scraper:test:e2e": "playwright test -c packages/proxmox-openapi/playwright.api-scraper.config.ts",
    "scraper:test:unit": "tsx packages/proxmox-openapi/tests/api-scraper/cli-options.spec.ts",
    "normalizer:test": "vitest run --config packages/proxmox-openapi/vitest.api-normalizer.config.ts",
    "openapi:test": "vitest run --config packages/proxmox-openapi/vitest.openapi-generator.config.ts",
    "automation:test": "vitest run --config packages/proxmox-openapi/vitest.automation.config.ts",
    "pages:build": "npm run openapi:prepare && npm run ui:build && node scripts/prepare-pages.mjs",
    "test:all": "npm run ui:test && npm run scraper:test:unit && npm run normalizer:test && npm run openapi:test && npm run automation:test",
    "test": "npm run test:all",
    "action:install": "npm install --workspace .github/actions/proxmox-openapi-artifacts",
    "action:build": "npm run build --workspace .github/actions/proxmox-openapi-artifacts",
    "action:package": "npm run lint --workspace .github/actions/proxmox-openapi-artifacts && npm run typecheck --workspace .github/actions/proxmox-openapi-artifacts && npm run build --workspace .github/actions/proxmox-openapi-artifacts",
    "action:verify": "npm run action:package && git diff --quiet -- .github/actions/proxmox-openapi-artifacts/dist || (echo 'dist output differs. Run npm run action:package and commit the dist folder.' >&2; exit 1)"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json}": "biome format --write --organize-imports"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@biomejs/biome": "^2.2.5",
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "jsdom": "^27.0.0",
    "openapi-types": "^12.1.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@mihailfox/proxmox-openapi": "file:packages/proxmox-openapi",
    "playwright": "^1.55.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "swagger-ui-dist": "^5.29.3",
    "yaml": "^2.8.1"
  }
}
